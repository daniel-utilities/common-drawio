{
    "git.openRepositoryInParentFolders": "always",
    "git.autofetch": "all",

    "markdownlint.config": {
        "MD001": false,
        "MD003": { "style": "consistent" },
        "MD007": { "indent": 4 },
        "MD012": false,
        "MD013": true,
        "MD014": false,
        "MD033": false,
        "MD040": false,
        "MD053": false,
    },

    "yaml.extension.recommendations": "false",

    "JSON-zain.json.autorefresh": true,

    "svg.preview.autoShow": true,

    "hediet.vscode-drawio.offline": true,
    "hediet.vscode-drawio.codeLinkActivated": true,
    "hediet.vscode-drawio.globalVars": {},
    "hediet.vscode-drawio.plugins": [],
    "hediet.vscode-drawio.knownPlugins": [],
    "hediet.vscode-drawio.customLibraries": [],
    "hediet.vscode-drawio.appearance": "automatic",
    "hediet.vscode-drawio.customColorSchemes": [],
    "hediet.vscode-drawio.customFonts": [],
    "hediet.vscode-drawio.theme": "automatic",

    "files.eol": "\n",
    "files.encoding": "utf8",
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[makefile]": {
        "editor.renderWhitespace": "boundary",
        "editor.detectIndentation": false,
        "editor.insertSpaces": false
    },
    "[bat]": {
        "files.encoding": "cp437",
        "files.eol": "\r\n",
        "editor.renderWhitespace": "boundary"
    },
    "[cmd]": {
        "files.encoding": "cp437",
        "files.eol": "\r\n",
        "editor.renderWhitespace": "boundary"
    },
    "[inf]": {
        "files.encoding": "utf16le",
        "files.eol": "\r\n",
        "editor.renderWhitespace": "boundary"
    },
    "[reg]": {
        "files.encoding": "utf16le",
        "files.eol": "\r\n",
        "editor.renderWhitespace": "boundary"
    },
    "[admx]": {
        "files.encoding": "utf8",
        "files.eol": "\r\n"
    },
    "[adml]": {
        "files.encoding": "utf8",
        "files.eol": "\r\n"
    },
    "[adm]": {
        "files.encoding": "utf16le",
        "files.eol": "\r\n"
    },
    "[cmtx]": {
        "files.encoding": "utf8bom",
        "files.eol": "\r\n"
    },
    "[pol]": {
        "files.encoding": "utf16le",
        "files.eol": "\r\n"
    },
}
