{
    "git.openRepositoryInParentFolders": "always",
    "git.autofetch": "all",

    "markdownlint.config": {
        "MD001": false,
        "MD003": { "style": "consistent" },
        "MD007": { "indent": 4 },
        "MD012": false,
        "MD013": true,
        "MD014": false,
        "MD033": false,
        "MD040": false,
        "MD053": false,
    },

    "yaml.extension.recommendations": "false",

    "JSON-zain.json.autorefresh": true,

    "svg.preview.autoShow": true,

    "files.eol": "\n",
    "files.encoding": "utf8",
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
}
